<Window x:Class="Sistema.Frete"        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        xmlns:local="clr-namespace:Sistema"        mc:Ignorable="d" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None"        Title="ListaVendas" Height="632" Width="1200" Loaded="Window_Loaded">    <Grid Margin="0,0,15,0" Height="644" VerticalAlignment="Top">        <DataGrid x:Name="dataGridFretes" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Load}" Margin="56,262,0,146"  HorizontalAlignment="Left" Width="1091" Initialized="dataGridFretes_Initialized" SelectionChanged="dataGridFretes_SelectionChanged">            <DataGrid.Columns>                <DataGridTextColumn Binding="{Binding cod}" Header="COD"  FontSize="20"/>                <DataGridTextColumn Binding="{Binding produto}" Header="PRODUTO"  FontSize="20"/>                <DataGridTextColumn Binding="{Binding unidade}" Header="UNIDADE"  FontSize="20"/>                <DataGridTextColumn Binding="{Binding quantidade}" Header="QUANTIDADE" FontSize="20"/>                <DataGridTextColumn Binding="{Binding data}" Header="DATA" FontSize="20"/>                <DataGridTextColumn Binding="{Binding cliente}" Header="CLIENTE" FontSize="20"/>                <DataGridTextColumn Binding="{Binding municipio}" Header="MUNICIPIO" FontSize="20"/>                <DataGridTextColumn Binding="{Binding valor}" Header="VALOR" FontSize="20"/>                <DataGridTextColumn Binding="{Binding valor_total}" Header="VALOR TOTAL" FontSize="20"/>                <DataGridTextColumn Binding="{Binding local_entrega}" Header="LOCAL ENTREGA" FontSize="20"/>                <DataGridTextColumn Binding="{Binding observacao}" Header="OBSERVACAO" FontSize="20"/>                <DataGridTextColumn Binding="{Binding total_fretes}" Header="TOTAL FRETES" FontSize="20"/>            </DataGrid.Columns>        </DataGrid>        <Label Foreground="Gray" FontFamily="Times New Roman" FontSize="30" Margin="409,30,0,604" HorizontalAlignment="Left" Width="261" Content="Lista de Fretes"/>        <Image Source="icone-voltar2.png"  HorizontalAlignment="Left" Height="43" Margin="44,17,0,0" VerticalAlignment="Top" Width="54" MouseDown="voltar2_MouseDown"/>
        <Label x:Name="thora" Foreground="Blue" Content="Label" HorizontalAlignment="Left" Margin="958,572,0,0" VerticalAlignment="Top" Width="74"/>
        <Label x:Name="tdata" Foreground="Blue" Content="Label" HorizontalAlignment="Left" Margin="860,572,0,0" VerticalAlignment="Top" Width="64"/>
        <DatePicker x:Name="dtpInicio" Background="Beige" HorizontalAlignment="Left" Margin="234,168,0,0" VerticalAlignment="Top" Height="41" Width="163"/>
        <DatePicker x:Name="dtpFim" Background="Beige" HorizontalAlignment="Left" Margin="586,168,0,0" VerticalAlignment="Top" Height="41" Width="163"/>
        <Label Content="PERIODO" FontSize="15" Foreground="Blue"  FontFamily="times new roman"  HorizontalAlignment="Left" Margin="116,178,0,0" VerticalAlignment="Top" Height="31" RenderTransformOrigin="0.4,1.548"/>
        <Label Content="ATÉ" FontSize="15" Foreground="Blue"  FontFamily="times new roman"  HorizontalAlignment="Left" Margin="478,174,0,0" VerticalAlignment="Top" Height="31"/>
        <Image Source="pesquisa1.png" HorizontalAlignment="Left" Height="30" Margin="792,170,0,0" VerticalAlignment="Top" Width="42"/>
        <Label Content="PESQUISAR" FontSize="15" Foreground="Blue"  FontFamily="times new roman"  HorizontalAlignment="Left" Margin="866,168,0,0" VerticalAlignment="Top" Height="31" Width="133" MouseDown="PESQUISAR_MouseDown"/>
        <Label Content="NOME DO CLIENTE" FontSize="15" Foreground="Blue"  FontFamily="times new roman"  HorizontalAlignment="Left" Margin="118,106,0,0" VerticalAlignment="Top" Height="31"/>
        <TextBox x:Name="tpesquisa" HorizontalAlignment="Left" Height="37" Margin="288,98,0,0" TextWrapping="Wrap" Background="Beige" VerticalAlignment="Top" Width="198" TextChanged="TextBox_TextChanged"/>
        <Image Source="pesquisa1.png" HorizontalAlignment="Left" Height="28" Margin="519,106,0,0" VerticalAlignment="Top" Width="40" MouseDown="Image_MouseDown"/>
        <Label Content="TOTAL DE FRETES " FontSize="15" Foreground="Blue"  FontFamily="times new roman"  HorizontalAlignment="Left" Margin="618,104,0,0" VerticalAlignment="Top" Height="31" MouseDown="totalvendas_MouseDown"/>
        <TextBox x:Name="tvaltot" HorizontalAlignment="Left" Height="37" Margin="792,98,0,0" TextWrapping="Wrap" Background="Beige" VerticalAlignment="Top" Width="198" TextChanged="TextBox_TextChanged"/>
    </Grid></Window>